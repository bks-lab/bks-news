---
interface Props {
  headings: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
  label?: string;
}

const { headings, label = 'Inhalt:' } = Astro.props;

// Only include h2 headings (main sections)
const tocItems = headings.filter(h => h.depth === 2);
---

{tocItems.length > 2 && (
  <nav class="toc" aria-label={label.replace(':', '')}>
    <span class="toc-label">{label}</span>
    <ul>
      {tocItems.map((heading, index) => (
        <li>
          <a href={`#${heading.slug}`}>{heading.text}</a>
          {index < tocItems.length - 1 && <span class="separator">Â·</span>}
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: 0.5rem;
    margin: 1.5rem 0 2rem;
    padding: 0;
    font-size: 0.85rem;
  }

  .toc-label {
    color: var(--color-muted);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-right: 0.25rem;
  }

  .toc ul {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.25rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc li {
    display: flex;
    align-items: center;
    margin: 0;
  }

  .toc a {
    color: var(--color-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .toc a:hover {
    color: var(--color-text);
    text-decoration: underline;
  }

  .separator {
    color: var(--color-border);
    margin: 0 0.5rem;
    user-select: none;
  }

  @media (max-width: 600px) {
    .toc {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .toc ul {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .separator {
      display: none;
    }
  }
</style>
