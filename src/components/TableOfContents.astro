---
interface Props {
  headings: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
}

const { headings } = Astro.props;

// Filter to only include h2 and h3
const tocItems = headings.filter(h => h.depth === 2 || h.depth === 3);
---

{tocItems.length > 0 && (
  <nav class="toc">
    <details open>
      <summary>Inhalt</summary>
      <ul>
        {tocItems.map((heading) => (
          <li class={heading.depth === 3 ? 'toc-sub' : ''}>
            <a href={`#${heading.slug}`}>{heading.text}</a>
          </li>
        ))}
      </ul>
    </details>
  </nav>
)}

<style>
  .toc {
    background: #1a1a1a;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1rem 1.5rem;
    margin: 2rem 0;
  }

  .toc summary {
    font-weight: 600;
    cursor: pointer;
    color: var(--color-text);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .toc summary::-webkit-details-marker {
    display: none;
  }

  .toc summary::before {
    content: '+ ';
    color: var(--color-accent);
  }

  .toc[open] summary::before {
    content: '- ';
  }

  .toc ul {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0 0;
  }

  .toc li {
    margin: 0.5rem 0;
  }

  .toc li.toc-sub {
    margin-left: 1.5rem;
    font-size: 0.9rem;
  }

  .toc a {
    color: var(--color-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .toc a:hover {
    color: var(--color-accent);
  }

  .toc li.toc-sub a {
    color: var(--color-muted);
    opacity: 0.8;
  }
</style>
