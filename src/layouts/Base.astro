---
import ThemeToggle from '../components/ThemeToggle.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  heroImage?: string;
}

const { title, description = 'AI-generated news briefings by BKS-Lab', heroImage } = Astro.props;
const siteUrl = 'https://bks-lab.github.io/bks-news';
const fullTitle = `${title} | BKS News`;
---

<!doctype html>
<html lang="de" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="article" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="BKS News" />
    {heroImage && <meta property="og:image" content={heroImage} />}

    <!-- Twitter -->
    <meta name="twitter:card" content={heroImage ? "summary_large_image" : "summary"} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    {heroImage && <meta name="twitter:image" content={heroImage} />}

    <link rel="icon" type="image/svg+xml" href="/bks-news/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="BKS News RSS" href="/bks-news/rss.xml" />
    <title>{fullTitle}</title>

    <script is:inline>
      // Prevent flash of wrong theme
      const savedTheme = localStorage.getItem('theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      document.documentElement.setAttribute('data-theme', savedTheme || (systemPrefersDark ? 'dark' : 'light'));
    </script>

    <style is:global>
      :root {
        /* Dark theme (default) - Warmer, softer tones */
        --color-bg: #111111;
        --color-text: #ebebeb;
        --color-muted: #888888;
        --color-accent: #6b7280;
        --color-accent-subtle: rgba(107, 114, 128, 0.15);
        --color-border: #2a2a2a;
        --color-card-bg: #1a1a1a;
        --color-highlight: #f59e0b;
        --max-width: 680px;
        --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --font-serif: Georgia, 'Times New Roman', serif;
      }

      [data-theme="light"] {
        --color-bg: #fefefe;
        --color-text: #1a1a1a;
        --color-muted: #666666;
        --color-accent: #374151;
        --color-accent-subtle: rgba(55, 65, 81, 0.08);
        --color-border: #e5e5e5;
        --color-card-bg: #f9f9f9;
        --color-highlight: #d97706;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      /* Skip to content - Accessibility */
      .skip-link {
        position: absolute;
        left: -9999px;
        z-index: 999;
        padding: 1rem 1.5rem;
        background: var(--color-accent);
        color: white;
        text-decoration: none;
        font-weight: 600;
        border-radius: 0 0 8px 0;
      }
      .skip-link:focus {
        left: 0;
        top: 0;
      }

      body {
        font-family: var(--font-sans);
        background: var(--color-bg);
        color: var(--color-text);
        line-height: 1.75;
        padding: 2.5rem 1.5rem;
        transition: background 0.3s, color 0.3s;
        font-size: 1rem;
      }

      main {
        max-width: var(--max-width);
        margin: 0 auto;
      }

      a {
        color: var(--color-accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      h1, h2, h3 {
        line-height: 1.3;
        margin-bottom: 1rem;
        font-weight: 600;
        letter-spacing: -0.02em;
      }

      h1 { font-size: 1.875rem; }
      h2 { font-size: 1.375rem; margin-top: 2.5rem; color: var(--color-text); }
      h3 { font-size: 1.125rem; margin-top: 2rem; }

      p {
        margin-bottom: 1rem;
      }

      ul, ol {
        margin-bottom: 1rem;
        padding-left: 1.5rem;
      }

      li {
        margin-bottom: 0.5rem;
      }

      code {
        background: var(--color-card-bg);
        padding: 0.2em 0.4em;
        border-radius: 4px;
        font-size: 0.9em;
      }

      pre {
        background: var(--color-card-bg);
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
        margin-bottom: 1rem;
        border: 1px solid var(--color-border);
      }

      pre code {
        background: none;
        padding: 0;
      }

      /* Improved Blockquote */
      blockquote {
        border-left: 2px solid var(--color-muted);
        padding: 0.75rem 1.25rem;
        margin: 1.5rem 0;
        background: transparent;
        font-style: italic;
        color: var(--color-muted);
      }

      blockquote p:last-child {
        margin-bottom: 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1rem;
      }

      th, td {
        border: 1px solid var(--color-border);
        padding: 0.75rem;
        text-align: left;
      }

      th {
        background: var(--color-card-bg);
      }

      hr {
        border: none;
        border-top: 1px solid var(--color-border);
        margin: 2rem 0;
      }

      /* Images - responsive with lazy loading fallback */
      img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1.5rem 0;
        display: block;
        background: var(--color-card-bg);
      }

      /* Hero/feature images - larger but constrained */
      article img:first-of-type {
        max-height: 400px;
        width: 100%;
        object-fit: cover;
      }

      /* Inline images - smaller */
      p img,
      .content img {
        max-height: 300px;
        object-fit: contain;
      }

      /* Image captions via alt text */
      img + em {
        display: block;
        text-align: center;
        color: var(--color-muted);
        font-size: 0.85rem;
        margin-top: -1rem;
        margin-bottom: 1.5rem;
      }

      .tag {
        display: inline-block;
        background: var(--color-card-bg);
        padding: 0.2em 0.6em;
        border-radius: 4px;
        font-size: 0.85em;
        margin-right: 0.5rem;
        color: var(--color-muted);
        border: 1px solid var(--color-border);
      }

      .meta {
        color: var(--color-muted);
        font-size: 0.9rem;
        margin-bottom: 2rem;
      }

      .back {
        display: inline-block;
        margin-bottom: 2rem;
        color: var(--color-muted);
      }

      .sources {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--color-border);
      }

      .sources h3 {
        color: var(--color-muted);
        font-size: 1rem;
      }

      /* Header with actions */
      .site-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
      }

      .site-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-text);
        text-decoration: none;
      }

      .site-title:hover {
        text-decoration: none;
        color: var(--color-accent);
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .rss-link {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        color: var(--color-muted);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        transition: color 0.2s, border-color 0.2s;
      }

      .rss-link:hover {
        color: var(--color-accent);
        border-color: var(--color-accent);
        text-decoration: none;
      }

      /* Mobile Responsive */
      @media (max-width: 600px) {
        body {
          padding: 1rem;
        }

        h1 {
          font-size: 1.5rem;
        }

        h2 {
          font-size: 1.25rem;
        }

        h3 {
          font-size: 1.1rem;
        }

        .site-header {
          margin-bottom: 1.5rem;
        }

        .site-title {
          font-size: 1.1rem;
        }

        blockquote {
          padding: 0.75rem 1rem;
          font-size: 1rem;
        }
      }

      /* TL;DR Section - with hover tooltip */
      #tldr {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--color-muted);
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
        margin-top: 0;
        cursor: help;
        position: relative;
        display: inline-block;
      }

      #tldr::after {
        content: 'Too Long; Didn\'t Read';
        position: absolute;
        left: 0;
        top: 100%;
        margin-top: 0.5rem;
        padding: 0.5rem 0.75rem;
        background: var(--color-card-bg);
        border: 1px solid var(--color-border);
        border-radius: 6px;
        font-size: 0.7rem;
        font-style: italic;
        text-transform: none;
        letter-spacing: 0;
        white-space: nowrap;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.2s, visibility 0.2s;
        z-index: 10;
      }

      #tldr:hover::after {
        opacity: 1;
        visibility: visible;
      }

      #tldr + p {
        color: var(--color-muted);
        font-size: 0.85rem;
        font-style: italic;
        margin-bottom: 1rem;
      }

      #tldr + p + ul {
        background: var(--color-accent-subtle);
        border-left: 3px solid var(--color-accent);
        border-radius: 0 8px 8px 0;
        padding: 1.25rem 1.5rem;
        list-style: none;
        margin: 0 0 2.5rem 0;
      }

      #tldr + p + ul li {
        padding: 0.6rem 0;
        border-bottom: 1px solid var(--color-border);
        margin: 0;
        line-height: 1.6;
      }

      #tldr + p + ul li:last-child {
        border-bottom: none;
        padding-bottom: 0;
      }

      #tldr + p + ul li strong {
        color: var(--color-text);
      }
    </style>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Zum Inhalt springen</a>
    <main id="main-content">
      <header class="site-header">
        <a href="/bks-news/" class="site-title">BKS News</a>
        <div class="header-actions">
          <a href="/bks-news/rss.xml" class="rss-link" aria-label="RSS Feed abonnieren" title="RSS Feed">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 11a9 9 0 0 1 9 9"/>
              <path d="M4 4a16 16 0 0 1 16 16"/>
              <circle cx="5" cy="19" r="1"/>
            </svg>
          </a>
          <ThemeToggle />
        </div>
      </header>
      <slot />
      <Footer />
    </main>

    <!-- Lazy loading for images -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('img').forEach(img => {
          if (!img.hasAttribute('loading')) {
            img.setAttribute('loading', 'lazy');
            img.setAttribute('decoding', 'async');
          }
        });
      });
    </script>
  </body>
</html>
