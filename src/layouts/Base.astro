---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'AI-generated news briefings by BKS-Lab' } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/bks-news/favicon.svg" />
    <title>{title} | BKS News</title>
    <style is:global>
      :root {
        --color-bg: #0f0f0f;
        --color-text: #e5e5e5;
        --color-muted: #888;
        --color-accent: #3b82f6;
        --color-border: #333;
        --max-width: 800px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: system-ui, -apple-system, sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
        line-height: 1.7;
        padding: 2rem;
      }

      main {
        max-width: var(--max-width);
        margin: 0 auto;
      }

      a {
        color: var(--color-accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      h1, h2, h3 {
        line-height: 1.3;
        margin-bottom: 1rem;
      }

      h1 { font-size: 2rem; }
      h2 { font-size: 1.5rem; margin-top: 2rem; }
      h3 { font-size: 1.25rem; margin-top: 1.5rem; }

      p {
        margin-bottom: 1rem;
      }

      ul, ol {
        margin-bottom: 1rem;
        padding-left: 1.5rem;
      }

      li {
        margin-bottom: 0.5rem;
      }

      code {
        background: #1a1a1a;
        padding: 0.2em 0.4em;
        border-radius: 4px;
        font-size: 0.9em;
      }

      pre {
        background: #1a1a1a;
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
        margin-bottom: 1rem;
      }

      pre code {
        background: none;
        padding: 0;
      }

      blockquote {
        border-left: 3px solid var(--color-accent);
        padding-left: 1rem;
        margin: 1rem 0;
        color: var(--color-muted);
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1rem;
      }

      th, td {
        border: 1px solid var(--color-border);
        padding: 0.75rem;
        text-align: left;
      }

      th {
        background: #1a1a1a;
      }

      hr {
        border: none;
        border-top: 1px solid var(--color-border);
        margin: 2rem 0;
      }

      /* Images - responsive with max dimensions */
      img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1.5rem 0;
        display: block;
      }

      /* Hero/feature images - larger but constrained */
      article img:first-of-type {
        max-height: 400px;
        width: 100%;
        object-fit: cover;
      }

      /* Inline images - smaller */
      p img,
      .content img {
        max-height: 300px;
        object-fit: contain;
      }

      /* Image captions via alt text */
      img + em {
        display: block;
        text-align: center;
        color: var(--color-muted);
        font-size: 0.85rem;
        margin-top: -1rem;
        margin-bottom: 1.5rem;
      }

      .tag {
        display: inline-block;
        background: #1a1a1a;
        padding: 0.2em 0.6em;
        border-radius: 4px;
        font-size: 0.85em;
        margin-right: 0.5rem;
        color: var(--color-muted);
      }

      .meta {
        color: var(--color-muted);
        font-size: 0.9rem;
        margin-bottom: 2rem;
      }

      .back {
        display: inline-block;
        margin-bottom: 2rem;
        color: var(--color-muted);
      }

      .sources {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--color-border);
      }

      .sources h3 {
        color: var(--color-muted);
        font-size: 1rem;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
